<UserControl x:Class="LibraryManagementSystem.Views.MembersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:converters="clr-namespace:LibraryManagementSystem.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    
    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
    </UserControl.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="320"/>
        </Grid.ColumnDefinitions>
        
        <!-- Members List -->
        <Border Grid.Column="0" 
                Background="White" 
                CornerRadius="8" 
                Margin="0,0,10,0"
                Padding="15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0"
                           Text="ðŸ‘¥ Gestionare Membri"
                           FontSize="22"
                           FontWeight="Bold"
                           Margin="0,0,0,15"/>
                
                <!-- Filter Buttons -->
                <StackPanel Grid.Row="1" 
                            Orientation="Horizontal" 
                            Margin="0,0,0,10">
                    <Button Content="ToÈ›i"
                            Command="{Binding ShowAllCommand}"
                            Padding="15,8"
                            Margin="0,0,5,0"/>
                    <Button Content="ðŸŽ“ Doar StudenÈ›i"
                            Command="{Binding FilterStudentsCommand}"
                            Padding="15,8"
                            Margin="0,0,5,0"/>
                    <Button Content="ðŸ‘¨â€ðŸ« Doar Profesori"
                            Command="{Binding FilterFacultyCommand}"
                            Padding="15,8"/>
                </StackPanel>
                
                <!-- Members DataGrid -->
                <DataGrid Grid.Row="2" 
                          ItemsSource="{Binding Members}"
                          SelectedItem="{Binding SelectedMember}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          SelectionMode="Single"
                          GridLinesVisibility="Horizontal"
                          CanUserAddRows="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID"
                                            Binding="{Binding MembershipId}"
                                            Width="120"/>
                        <DataGridTextColumn Header="Nume"
                                            Binding="{Binding FullName}"
                                            Width="*"/>
                        <DataGridTextColumn Header="Tip"
                                            Binding="{Binding MemberType}"
                                            Width="80"/>
                        <DataGridTextColumn Header="Email"
                                            Binding="{Binding Email}"
                                            Width="180"/>
                        <DataGridTextColumn Header="CÄƒrÈ›i Max"
                                            Binding="{Binding MaxBooksAllowed}"
                                            Width="80"/>
                        <DataGridTextColumn Header="Zile Max"
                                            Binding="{Binding MaxIssueDays}"
                                            Width="80"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>
        
        <!-- Edit Panel -->
        <Border Grid.Column="1" 
                Background="White" 
                CornerRadius="8"
                Padding="15">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="Detalii Membru"
                               FontSize="18"
                               FontWeight="Bold"
                               Margin="0,0,0,15"/>
                    
                    <!-- Add New Buttons -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                        <Button Content="âž• Student Nou"
                                Command="{Binding NewStudentCommand}"
                                Padding="10,8"
                                Margin="0,0,5,0"
                                Background="#4CAF50"
                                Foreground="White"/>
                        <Button Content="âž• Profesor Nou"
                                Command="{Binding NewFacultyCommand}"
                                Padding="10,8"
                                Background="#FF9800"
                                Foreground="White"/>
                    </StackPanel>
                    
                    <!-- Common Fields -->
                    <TextBlock Text="Prenume *" FontWeight="SemiBold"/>
                    <TextBox Text="{Binding EditFirstName, UpdateSourceTrigger=PropertyChanged}"
                             Padding="8"
                             Margin="0,5,0,10"/>

                    <TextBlock Text="Nume *" FontWeight="SemiBold"/>
                    <TextBox Text="{Binding EditLastName, UpdateSourceTrigger=PropertyChanged}"
                             Padding="8"
                             Margin="0,5,0,10"/>

                    <TextBlock Text="Email *" FontWeight="SemiBold"/>
                    <TextBox Text="{Binding EditEmail, UpdateSourceTrigger=PropertyChanged}"
                             Padding="8"
                             Margin="0,5,0,10"/>

                    <TextBlock Text="Telefon" FontWeight="SemiBold"/>
                    <TextBox Text="{Binding EditPhone, UpdateSourceTrigger=PropertyChanged}"
                             Padding="8"
                             Margin="0,5,0,10"/>

                    <TextBlock Text="Departament *" FontWeight="SemiBold"/>
                    <TextBox Text="{Binding EditDepartment, UpdateSourceTrigger=PropertyChanged}"
                             Padding="8"
                             Margin="0,5,0,10"/>
                    
                    <!-- Student Fields -->
                    <StackPanel Visibility="{Binding IsStudent, Converter={StaticResource BoolToVisibility}}">
                        <TextBlock Text="ID Student *" FontWeight="SemiBold"/>
                        <TextBox Text="{Binding EditStudentId, UpdateSourceTrigger=PropertyChanged}"
                                 Padding="8"
                                 Margin="0,5,0,10"
                                 IsEnabled="{Binding IsNewMember}"/>

                        <TextBlock Text="An de Studiu" FontWeight="SemiBold"/>
                        <ComboBox SelectedItem="{Binding EditYearOfStudy}" 
                                  Padding="8" 
                                  Margin="0,5,0,10">
                            <ComboBoxItem Content="1"/>
                            <ComboBoxItem Content="2"/>
                            <ComboBoxItem Content="3"/>
                            <ComboBoxItem Content="4"/>
                            <ComboBoxItem Content="5"/>
                        </ComboBox>
                        
                        <Border Background="#E3F2FD"
                                Padding="10"
                                CornerRadius="5"
                                Margin="0,5,0,10">
                            <StackPanel>
                                <TextBlock Text="Limite Student:" FontWeight="Bold"/>
                                <TextBlock Text="â€¢ CÄƒrÈ›i Max: 3"/>
                                <TextBlock Text="â€¢ Zile Max: 14"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                    
                    <!-- Faculty Fields -->
                    <StackPanel Visibility="{Binding IsFaculty, Converter={StaticResource BoolToVisibility}}">
                        <TextBlock Text="ID Profesor *" FontWeight="SemiBold"/>
                        <TextBox Text="{Binding EditFacultyId, UpdateSourceTrigger=PropertyChanged}"
                                 Padding="8"
                                 Margin="0,5,0,10"
                                 IsEnabled="{Binding IsNewMember}"/>

                        <TextBlock Text="FuncÈ›ie" FontWeight="SemiBold"/>
                        <TextBox Text="{Binding EditDesignation, UpdateSourceTrigger=PropertyChanged}" 
                                 Padding="8" 
                                 Margin="0,5,0,10"/>
                        
                        <Border Background="#FFF3E0"
                                Padding="10"
                                CornerRadius="5"
                                Margin="0,5,0,10">
                            <StackPanel>
                                <TextBlock Text="Limite Profesor:" FontWeight="Bold"/>
                                <TextBlock Text="â€¢ CÄƒrÈ›i Max: 10"/>
                                <TextBlock Text="â€¢ Zile Max: 30"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                    
                    <!-- Action Buttons -->
                    <Button Content="ðŸ’¾ AdaugÄƒ Student"
                            Command="{Binding AddStudentCommand}"
                            Padding="10"
                            Margin="0,5"
                            Background="#4CAF50"
                            Foreground="White"
                            Visibility="{Binding IsStudent, Converter={StaticResource BoolToVisibility}}"/>

                    <Button Content="ðŸ’¾ AdaugÄƒ Profesor"
                            Command="{Binding AddFacultyCommand}"
                            Padding="10"
                            Margin="0,5"
                            Background="#FF9800"
                            Foreground="White"
                            Visibility="{Binding IsFaculty, Converter={StaticResource BoolToVisibility}}"/>

                    <Button Content="ðŸ’¾ ActualizeazÄƒ Membru"
                            Command="{Binding UpdateMemberCommand}"
                            Padding="10"
                            Margin="0,5"
                            Background="#2196F3"
                            Foreground="White"
                            Visibility="{Binding IsNewMember, Converter={StaticResource BoolToVisibility}, ConverterParameter=invert}"/>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>
