<UserControl x:Class="LibraryManagementSystem.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:LibraryManagementSystem.Converters"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800">

    <UserControl.Resources>
        <converters:CurrencyConverter x:Key="CurrencyConverter"/>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibility"/>

        <Style x:Key="StatCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.15"/>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel>
            <!-- Header -->
            <TextBlock Text="{Binding DashboardTitle}"
                       FontSize="26"
                       FontWeight="Bold"
                       Margin="10,0,0,5"/>
            <TextBlock Text="{Binding WelcomeMessage}"
                       FontSize="14"
                       Foreground="#6B7280"
                       Margin="10,0,0,20"/>

            <!-- User Statistics Cards -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- My Active Loans -->
                <Border Grid.Column="0" Style="{StaticResource StatCardStyle}">
                    <StackPanel>
                        <TextBlock Text="CARTI IMPRUMUTATE"
                                   FontSize="11"
                                   Foreground="#6B7280"
                                   FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding MyActiveIssues}"
                                   FontSize="36"
                                   FontWeight="Bold"
                                   Foreground="#2196F3"/>
                        <TextBlock Text="{Binding MyBooksLimit}"
                                   Foreground="#9CA3AF"
                                   FontSize="12"/>
                    </StackPanel>
                </Border>

                <!-- My Overdue -->
                <Border Grid.Column="1" Style="{StaticResource StatCardStyle}">
                    <StackPanel>
                        <TextBlock Text="INTARZIATE"
                                   FontSize="11"
                                   Foreground="#6B7280"
                                   FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding MyOverdueCount}"
                                   FontSize="36"
                                   FontWeight="Bold"
                                   Foreground="#F44336"/>
                        <TextBlock Text="carti de returnat urgent"
                                   Foreground="#9CA3AF"
                                   FontSize="12"/>
                    </StackPanel>
                </Border>

                <!-- My Pending Fines -->
                <Border Grid.Column="2" Style="{StaticResource StatCardStyle}">
                    <StackPanel>
                        <TextBlock Text="AMENZI NEACHITATE"
                                   FontSize="11"
                                   Foreground="#6B7280"
                                   FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding MyPendingFines, Converter={StaticResource CurrencyConverter}}"
                                   FontSize="30"
                                   FontWeight="Bold"
                                   Foreground="#FF9800"/>
                        <TextBlock Text="de platit"
                                   Foreground="#9CA3AF"
                                   FontSize="12"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Member Type Info (doar pentru non-admin) -->
            <Border Style="{StaticResource StatCardStyle}" Margin="5,15,5,5"
                    Visibility="{Binding IsNotAdmin, Converter={StaticResource BoolToVisibility}}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Tipul contului tau"
                                   FontWeight="Bold"
                                   FontSize="14"
                                   Margin="0,0,0,8"/>
                        <TextBlock Text="{Binding MemberTypeDisplay}"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Foreground="#2563EB"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1">
                        <TextBlock Text="Limite imprumut"
                                   FontWeight="Bold"
                                   FontSize="14"
                                   Margin="0,0,0,8"/>
                        <TextBlock Text="{Binding MaxBooksInfo}"
                                   FontSize="13"
                                   Foreground="#374151"/>
                        <TextBlock Text="{Binding MaxDaysInfo}"
                                   FontSize="13"
                                   Foreground="#374151"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- All Active Users (doar pentru admin) -->
            <Border Style="{StaticResource StatCardStyle}" Margin="5,15,5,5"
                    Visibility="{Binding IsAdmin, Converter={StaticResource BoolToVisibility}}">
                <StackPanel>
                    <TextBlock Text="Utilizatori Activi"
                               FontWeight="Bold"
                               FontSize="16"
                               Margin="0,0,0,10"/>
                    <DataGrid ItemsSource="{Binding AllActiveMembers}"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              HeadersVisibility="Column"
                              GridLinesVisibility="Horizontal"
                              CanUserAddRows="False"
                              MaxHeight="200">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID"
                                                Binding="{Binding MembershipId}"
                                                Width="80"/>
                            <DataGridTextColumn Header="Nume"
                                                Binding="{Binding FullName}"
                                                Width="*"/>
                            <DataGridTextColumn Header="Tip"
                                                Binding="{Binding MemberType}"
                                                Width="80"/>
                            <DataGridTextColumn Header="Email"
                                                Binding="{Binding Email}"
                                                Width="180"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Border>

            <!-- Active Loans List -->
            <Border Style="{StaticResource StatCardStyle}" Margin="5,10,5,5">
                <StackPanel>
                    <TextBlock Text="{Binding ActiveLoansTitle}"
                               FontWeight="Bold"
                               FontSize="16"
                               Margin="0,0,0,10"/>
                    <DataGrid ItemsSource="{Binding MyRecentIssues}"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              HeadersVisibility="Column"
                              GridLinesVisibility="Horizontal"
                              CanUserAddRows="False"
                              MaxHeight="200">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Carte"
                                                Binding="{Binding Book.Title}"
                                                Width="*"/>
                            <DataGridTextColumn Header="Membru"
                                                Binding="{Binding Member.FullName}"
                                                Width="120"
                                                Visibility="{Binding DataContext.IsAdmin, RelativeSource={RelativeSource AncestorType=DataGrid}, Converter={StaticResource BoolToVisibility}}"/>
                            <DataGridTextColumn Header="Data Imprumut"
                                                Binding="{Binding IssueDate, StringFormat='dd/MM/yyyy'}"
                                                Width="100"/>
                            <DataGridTextColumn Header="Data Scadenta"
                                                Binding="{Binding DueDate, StringFormat='dd/MM/yyyy'}"
                                                Width="100"/>
                            <DataGridTextColumn Header="Status"
                                                Binding="{Binding StatusDisplay}"
                                                Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <TextBlock Text="{Binding NoActiveIssuesText}"
                               Foreground="#9CA3AF"
                               FontStyle="Italic"
                               Margin="0,10,0,0"
                               Visibility="{Binding HasNoActiveIssues, Converter={StaticResource BoolToVisibility}}"/>
                </StackPanel>
            </Border>

            <!-- Overdue Warning -->
            <Border Style="{StaticResource StatCardStyle}"
                    Background="#FEF2F2"
                    Margin="5,10,5,5"
                    Visibility="{Binding HasOverdueBooks, Converter={StaticResource BoolToVisibility}}">
                <StackPanel>
                    <TextBlock Text="{Binding OverdueWarningTitle}"
                               FontWeight="Bold"
                               FontSize="16"
                               Foreground="#DC2626"
                               Margin="0,0,0,10"/>
                    <DataGrid ItemsSource="{Binding MyOverdueBooks}"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              HeadersVisibility="Column"
                              GridLinesVisibility="Horizontal"
                              CanUserAddRows="False"
                              MaxHeight="150">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Carte"
                                                Binding="{Binding Book.Title}"
                                                Width="*"/>
                            <DataGridTextColumn Header="Membru"
                                                Binding="{Binding Member.FullName}"
                                                Width="120"
                                                Visibility="{Binding DataContext.IsAdmin, RelativeSource={RelativeSource AncestorType=DataGrid}, Converter={StaticResource BoolToVisibility}}"/>
                            <DataGridTextColumn Header="Scadenta"
                                                Binding="{Binding DueDate, StringFormat='dd/MM/yyyy'}"
                                                Width="100"/>
                            <DataGridTextColumn Header="Zile Intarziere"
                                                Binding="{Binding DaysOverdue}"
                                                Width="100">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="#DC2626"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
