<UserControl x:Class="LibraryManagementSystem.Views.BooksView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:LibraryManagementSystem.Converters"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800">

    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
        <converters:AvailabilityToColorConverter x:Key="AvailabilityToColor"/>
        <converters:NullToVisibilityConverter x:Key="NullToVisibility"/>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>

        <!-- Books List -->
        <Border Grid.Column="0"
                Background="White"
                CornerRadius="8"
                Margin="0,0,10,0"
                Padding="15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Text="Catalogul de Carti"
                           FontSize="22"
                           FontWeight="Bold"
                           Margin="0,0,0,15"/>

                <!-- Search -->
                <Grid Grid.Row="1" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox Grid.Column="0"
                             Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                             Padding="8"
                             FontSize="14">
                        <TextBox.InputBindings>
                            <KeyBinding Key="Return" Command="{Binding SearchCommand}"/>
                        </TextBox.InputBindings>
                    </TextBox>
                    <Button Grid.Column="1"
                            Content="Cauta"
                            Command="{Binding SearchCommand}"
                            Padding="15,8"
                            Margin="5,0"/>
                    <Button Grid.Column="2"
                            Content="Sterge"
                            Command="{Binding ClearSearchCommand}"
                            Padding="15,8"/>
                </Grid>

                <!-- Books DataGrid -->
                <DataGrid Grid.Row="2"
                          ItemsSource="{Binding Books}"
                          SelectedItem="{Binding SelectedBook}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          SelectionMode="Single"
                          GridLinesVisibility="Horizontal"
                          CanUserAddRows="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID"
                                            Binding="{Binding BookCode}"
                                            Width="50"/>
                        <DataGridTextColumn Header="Titlu"
                                            Binding="{Binding Title}"
                                            Width="*"/>
                        <DataGridTextColumn Header="Autor"
                                            Binding="{Binding Author}"
                                            Width="150"/>
                        <DataGridTextColumn Header="Categorie"
                                            Binding="{Binding Category}"
                                            Width="120"/>
                        <DataGridTextColumn Header="Exemplar"
                                            Binding="{Binding CopyNumber}"
                                            Width="70"/>
                        <DataGridTemplateColumn Header="Disponibil" Width="80">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Foreground="{Binding IsAvailable, Converter={StaticResource AvailabilityToColor}}">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text" Value="Nu"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsAvailable}" Value="True">
                                                        <Setter Property="Text" Value="Da"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>

        <!-- Edit Panel (doar pentru Admin) -->
        <Border Grid.Column="1"
                Background="White"
                CornerRadius="8"
                Padding="15"
                Visibility="{Binding IsAdmin, Converter={StaticResource BoolToVisibility}}">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="Gestiune Carti (Admin)"
                               FontSize="18"
                               FontWeight="Bold"
                               Margin="0,0,0,15"/>

                    <TextBlock Text="Titlu *" FontWeight="SemiBold"/>
                    <TextBox Text="{Binding EditTitle, UpdateSourceTrigger=PropertyChanged}"
                             Padding="8"
                             Margin="0,5,0,10"/>

                    <TextBlock Text="Autor *" FontWeight="SemiBold"/>
                    <TextBox Text="{Binding EditAuthor, UpdateSourceTrigger=PropertyChanged}"
                             Padding="8"
                             Margin="0,5,0,10"/>

                    <TextBlock Text="ISBN *" FontWeight="SemiBold"/>
                    <TextBox Text="{Binding EditISBN, UpdateSourceTrigger=PropertyChanged}"
                             Padding="8"
                             Margin="0,5,0,10"
                             IsEnabled="{Binding IsNewBook}"/>

                    <TextBlock Text="Editura" FontWeight="SemiBold"/>
                    <TextBox Text="{Binding EditPublisher, UpdateSourceTrigger=PropertyChanged}"
                             Padding="8"
                             Margin="0,5,0,10"/>

                    <TextBlock Text="Categorie" FontWeight="SemiBold"/>
                    <TextBox Text="{Binding EditCategory, UpdateSourceTrigger=PropertyChanged}"
                             Padding="8"
                             Margin="0,5,0,10"/>

                    <TextBlock Text="An Publicare" FontWeight="SemiBold"/>
                    <TextBox Text="{Binding EditPublicationYear, UpdateSourceTrigger=PropertyChanged}"
                             Padding="8"
                             Margin="0,5,0,15"/>

                    <!-- Buttons -->
                    <Button Content="Carte Noua"
                            Command="{Binding NewBookCommand}"
                            Padding="10"
                            Margin="0,5"
                            Background="#4CAF50"
                            Foreground="White"/>

                    <Button Content="Adauga Carte"
                            Command="{Binding AddBookCommand}"
                            Padding="10"
                            Margin="0,5"
                            Background="#2196F3"
                            Foreground="White"
                            Visibility="{Binding IsNewBook, Converter={StaticResource BoolToVisibility}}"/>

                    <Button Content="Actualizeaza Carte"
                            Command="{Binding UpdateBookCommand}"
                            Padding="10"
                            Margin="0,5"
                            Background="#FF9800"
                            Foreground="White"
                            Visibility="{Binding IsNewBook, Converter={StaticResource BoolToVisibility}, ConverterParameter=invert}"/>

                    <Button Content="Sterge Carte"
                            Command="{Binding DeleteBookCommand}"
                            Padding="10"
                            Margin="0,5"
                            Background="#F44336"
                            Foreground="White"/>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Info Panel pentru utilizatori non-admin -->
        <Border Grid.Column="1"
                Background="White"
                CornerRadius="8"
                Padding="15"
                Visibility="{Binding IsAdmin, Converter={StaticResource BoolToVisibility}, ConverterParameter=invert}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="Detalii Carte"
                           FontSize="18"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,15"/>

                <TextBlock Text="Selectati o carte din lista pentru a vedea detaliile."
                           TextWrapping="Wrap"
                           TextAlignment="Center"
                           Foreground="#6B7280"
                           Margin="0,0,0,20"/>

                <Border Background="#EFF6FF" CornerRadius="5" Padding="15"
                        Visibility="{Binding SelectedBook, Converter={StaticResource NullToVisibility}}">
                    <StackPanel>
                        <TextBlock Text="{Binding SelectedBook.Title}"
                                   FontWeight="Bold"
                                   FontSize="14"
                                   TextWrapping="Wrap"/>
                        <TextBlock Text="{Binding SelectedBook.Author}"
                                   Foreground="#4B5563"
                                   Margin="0,5,0,0"/>
                        <TextBlock Foreground="#6B7280" Margin="0,10,0,0">
                            <Run Text="ISBN: "/><Run Text="{Binding SelectedBook.ISBN}"/>
                        </TextBlock>
                        <TextBlock Foreground="#6B7280">
                            <Run Text="Categorie: "/><Run Text="{Binding SelectedBook.Category}"/>
                        </TextBlock>
                        <TextBlock Foreground="#6B7280">
                            <Run Text="Editura: "/><Run Text="{Binding SelectedBook.Publisher}"/>
                        </TextBlock>
                        <TextBlock Foreground="#6B7280">
                            <Run Text="An: "/><Run Text="{Binding SelectedBook.PublicationYear}"/>
                        </TextBlock>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
