<UserControl x:Class="LibraryManagementSystem.Views.BooksView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:converters="clr-namespace:LibraryManagementSystem.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    
    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
        <converters:AvailabilityToColorConverter x:Key="AvailabilityToColor"/>
        <converters:CurrencyConverter x:Key="CurrencyConverter"/>
    </UserControl.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>
        
        <!-- Books List -->
        <Border Grid.Column="0" 
                Background="White" 
                CornerRadius="8" 
                Margin="0,0,10,0"
                Padding="15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0"
                           Text="ðŸ“– Gestiune CÄƒrÈ›i"
                           FontSize="22"
                           FontWeight="Bold"
                           Margin="0,0,0,15"/>
                
                <!-- Search -->
                <Grid Grid.Row="1" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox Grid.Column="0" 
                             Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                             Padding="8"
                             FontSize="14">
                        <TextBox.InputBindings>
                            <KeyBinding Key="Return" Command="{Binding SearchCommand}"/>
                        </TextBox.InputBindings>
                    </TextBox>
                    <Button Grid.Column="1"
                            Content="ðŸ” CautÄƒ"
                            Command="{Binding SearchCommand}"
                            Padding="10,8"
                            Margin="5,0"/>
                    <Button Grid.Column="2"
                            Content="È˜terge"
                            Command="{Binding ClearSearchCommand}"
                            Padding="10,8"/>
                </Grid>
                
                <!-- Books DataGrid -->
                <DataGrid Grid.Row="2" 
                          ItemsSource="{Binding Books}"
                          SelectedItem="{Binding SelectedBook}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          SelectionMode="Single"
                          GridLinesVisibility="Horizontal"
                          CanUserAddRows="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Cod"
                                            Binding="{Binding BookCode}"
                                            Width="100"/>
                        <DataGridTextColumn Header="Titlu"
                                            Binding="{Binding Title}"
                                            Width="*"/>
                        <DataGridTextColumn Header="Autor"
                                            Binding="{Binding Author}"
                                            Width="150"/>
                        <DataGridTextColumn Header="Categorie"
                                            Binding="{Binding Category}"
                                            Width="100"/>
                        <DataGridTextColumn Header="Copie #"
                                            Binding="{Binding CopyNumber}"
                                            Width="60"/>
                        <DataGridTemplateColumn Header="Disponibil" Width="80">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding IsAvailable, Converter={StaticResource BoolToVisibility}}"
                                               Foreground="{Binding IsAvailable, Converter={StaticResource AvailabilityToColor}}">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text" Value="Nu"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsAvailable}" Value="True">
                                                        <Setter Property="Text" Value="Da"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Header="PreÈ›"
                                            Binding="{Binding Price, StringFormat='C'}"
                                            Width="70"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>
        
        <!-- Edit Panel -->
        <Border Grid.Column="1" 
                Background="White" 
                CornerRadius="8"
                Padding="15">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="Detalii Carte"
                               FontSize="18"
                               FontWeight="Bold"
                               Margin="0,0,0,15"/>

                    <TextBlock Text="Titlu *" FontWeight="SemiBold"/>
                    <TextBox Text="{Binding EditTitle, UpdateSourceTrigger=PropertyChanged}"
                             Padding="8"
                             Margin="0,5,0,10"/>

                    <TextBlock Text="Autor *" FontWeight="SemiBold"/>
                    <TextBox Text="{Binding EditAuthor, UpdateSourceTrigger=PropertyChanged}"
                             Padding="8"
                             Margin="0,5,0,10"/>

                    <TextBlock Text="ISBN *" FontWeight="SemiBold"/>
                    <TextBox Text="{Binding EditISBN, UpdateSourceTrigger=PropertyChanged}"
                             Padding="8"
                             Margin="0,5,0,10"
                             IsEnabled="{Binding IsNewBook}"/>

                    <TextBlock Text="Editura" FontWeight="SemiBold"/>
                    <TextBox Text="{Binding EditPublisher, UpdateSourceTrigger=PropertyChanged}"
                             Padding="8"
                             Margin="0,5,0,10"/>

                    <TextBlock Text="Categorie" FontWeight="SemiBold"/>
                    <TextBox Text="{Binding EditCategory, UpdateSourceTrigger=PropertyChanged}"
                             Padding="8"
                             Margin="0,5,0,10"/>

                    <TextBlock Text="An Publicare" FontWeight="SemiBold"/>
                    <TextBox Text="{Binding EditPublicationYear, UpdateSourceTrigger=PropertyChanged}"
                             Padding="8"
                             Margin="0,5,0,10"/>

                    <TextBlock Text="PreÈ› (Lei)" FontWeight="SemiBold"/>
                    <TextBox Text="{Binding EditPrice, UpdateSourceTrigger=PropertyChanged}"
                             Padding="8"
                             Margin="0,5,0,15"/>
                    
                    <!-- Buttons -->
                    <Button Content="âž• Carte NouÄƒ"
                            Command="{Binding NewBookCommand}"
                            Padding="10"
                            Margin="0,5"
                            Background="#4CAF50"
                            Foreground="White"/>

                    <Button Content="ðŸ’¾ AdaugÄƒ Carte"
                            Command="{Binding AddBookCommand}"
                            Padding="10"
                            Margin="0,5"
                            Background="#2196F3"
                            Foreground="White"
                            Visibility="{Binding IsNewBook, Converter={StaticResource BoolToVisibility}}"/>

                    <Button Content="ðŸ’¾ ActualizeazÄƒ Carte"
                            Command="{Binding UpdateBookCommand}"
                            Padding="10"
                            Margin="0,5"
                            Background="#FF9800"
                            Foreground="White"
                            Visibility="{Binding IsNewBook, Converter={StaticResource BoolToVisibility}, ConverterParameter=invert}"/>

                    <Button Content="ðŸ—‘ï¸ È˜terge Carte"
                            Command="{Binding DeleteBookCommand}"
                            Padding="10"
                            Margin="0,5"
                            Background="#F44336"
                            Foreground="White"/>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>
