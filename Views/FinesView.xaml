<UserControl x:Class="LibraryManagementSystem.Views.FinesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:converters="clr-namespace:LibraryManagementSystem.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    
    <UserControl.Resources>
        <converters:CurrencyConverter x:Key="CurrencyConverter"/>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
    </UserControl.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="280"/>
        </Grid.ColumnDefinitions>
        
        <!-- Fines List -->
        <Border Grid.Column="0" 
                Background="White" 
                CornerRadius="8" 
                Margin="0,0,10,0"
                Padding="15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0"
                           Text="ðŸ’° Gestionare Amenzi"
                           FontSize="22"
                           FontWeight="Bold"
                           Margin="0,0,0,15"/>
                
                <!-- Filter Buttons -->
                <StackPanel Grid.Row="1" 
                            Orientation="Horizontal" 
                            Margin="0,0,0,10">
                    <Button Content="Toate Amenzile"
                            Command="{Binding ShowAllFinesCommand}"
                            Padding="15,8"
                            Margin="0,0,5,0"/>
                    <Button Content="âš ï¸ Doar Neachitate"
                            Command="{Binding ShowPendingFinesCommand}"
                            Padding="15,8"
                            Background="#FFF3E0"/>
                </StackPanel>
                
                <!-- Fines DataGrid -->
                <DataGrid Grid.Row="2" 
                          ItemsSource="{Binding Fines}"
                          SelectedItem="{Binding SelectedFine}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          SelectionMode="Single"
                          GridLinesVisibility="Horizontal"
                          CanUserAddRows="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID"
                                            Binding="{Binding FineId}"
                                            Width="50"/>
                        <DataGridTextColumn Header="Carte"
                                            Binding="{Binding BookIssue.Book.Title}"
                                            Width="*"/>
                        <DataGridTextColumn Header="Membru"
                                            Binding="{Binding BookIssue.Member.FullName}"
                                            Width="130"/>
                        <DataGridTextColumn Header="Zile ÃŽntÃ¢rziere"
                                            Binding="{Binding DaysOverdue}"
                                            Width="90"/>
                        <DataGridTextColumn Header="AmendÄƒ/Zi"
                                            Binding="{Binding FinePerDay, StringFormat='C'}"
                                            Width="70"/>
                        <DataGridTextColumn Header="Total"
                                            Binding="{Binding TotalAmount, StringFormat='C'}"
                                            Width="70"/>
                        <DataGridTextColumn Header="Achitat"
                                            Binding="{Binding AmountPaid, StringFormat='C'}"
                                            Width="70"/>
                        <DataGridTextColumn Header="RÄƒmas"
                                            Binding="{Binding RemainingAmount, StringFormat='C'}"
                                            Width="80">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="Red"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Status"
                                            Binding="{Binding Status}"
                                            Width="80"/>
                    </DataGrid.Columns>
                </DataGrid>
                
                <!-- Summary -->
                <Border Grid.Row="3" 
                        Background="#FFEBEE" 
                        Padding="15" 
                        CornerRadius="5"
                        Margin="0,10,0,0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Total Amenzi Neachitate: "
                                   FontSize="16"
                                   FontWeight="Bold"/>
                        <TextBlock Text="{Binding TotalPendingFines, Converter={StaticResource CurrencyConverter}}" 
                                   FontSize="16" 
                                   FontWeight="Bold" 
                                   Foreground="Red"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
        
        <!-- Payment Panel -->
        <Border Grid.Column="1" 
                Background="White" 
                CornerRadius="8"
                Padding="15">
            <StackPanel>
                <TextBlock Text="ProceseazÄƒ PlatÄƒ"
                           FontSize="18"
                           FontWeight="Bold"
                           Margin="0,0,0,15"/>
                
                <!-- Selected Fine Info -->
                <Border Background="#F5F5F5" 
                        Padding="10" 
                        CornerRadius="5"
                        Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="AmendÄƒ SelectatÄƒ:" FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding SelectedFine.BookIssue.Book.Title, FallbackValue='Niciuna selectatÄƒ'}"
                                   TextWrapping="Wrap"
                                   Margin="0,5,0,0"/>
                        <TextBlock Margin="0,5,0,0">
                            <Run Text="SumÄƒ DatoratÄƒ: "/>
                            <Run Text="{Binding SelectedFine.RemainingAmount, StringFormat='C', FallbackValue='$0.00'}"
                                 FontWeight="Bold"
                                 Foreground="Red"/>
                        </TextBlock>
                    </StackPanel>
                </Border>
                
                <!-- Payment Amount -->
                <TextBlock Text="SumÄƒ PlatÄƒ:" FontWeight="SemiBold"/>
                <TextBox Text="{Binding PaymentAmount, UpdateSourceTrigger=PropertyChanged}"
                         Padding="10"
                         FontSize="16"
                         Margin="0,5,0,15"/>

                <Button Content="ðŸ’µ ÃŽnregistreazÄƒ PlatÄƒ"
                        Command="{Binding PayFineCommand}"
                        Padding="15,10"
                        Background="#4CAF50"
                        Foreground="White"
                        FontSize="14"
                        Margin="0,0,0,20"/>
                
                <!-- Waive Fine Section -->
                <Border BorderBrush="#E0E0E0" 
                        BorderThickness="0,1,0,0" 
                        Padding="0,15,0,0">
                    <StackPanel>
                        <TextBlock Text="AnuleazÄƒ AmendÄƒ"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Margin="0,0,0,10"/>

                        <TextBlock Text="Motiv anulare:" FontWeight="SemiBold"/>
                        <TextBox Text="{Binding WaiveReason, UpdateSourceTrigger=PropertyChanged}"
                                 Padding="8"
                                 Height="60"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 Margin="0,5,0,10"/>

                        <Button Content="ðŸš« AnuleazÄƒ AmendÄƒ"
                                Command="{Binding WaiveFineCommand}"
                                Padding="15,10"
                                Background="#FF9800"
                                Foreground="White"/>
                    </StackPanel>
                </Border>
                
                <!-- Fine Rate Info -->
                <Border Background="#E3F2FD" 
                        Padding="10" 
                        CornerRadius="5"
                        Margin="0,20,0,0">
                    <StackPanel>
                        <TextBlock Text="â„¹ï¸ InformaÈ›ii AmendÄƒ" FontWeight="Bold"/>
                        <TextBlock Text="Tarif AmendÄƒ: 1 Leu pe zi" Margin="0,5,0,0"/>
                        <TextBlock Text="Se aplicÄƒ cÃ¢nd cartea este returnatÄƒ dupÄƒ data scadenÈ›ei"
                                   TextWrapping="Wrap"
                                   Foreground="Gray"
                                   FontSize="11"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
